@model DatingSida.Models.ViewModel.ListCarouselViewModel

@{
    ViewBag.Title = "Start";
}
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<style>
    #myCarousel {
        height: 80vh;
        max-height: 80vh;
        width: 100%;
        overflow: hidden;
    }
</style>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    @if (Model.carousels.Count == 3)
    {
        <div class="carousel-inner">
            <div class="item active">
                <div>
                    <div class="center-block" style="cursor: pointer;">
                        <img src="../@Model.carousels[0].Image" id="@Model.carousels[0].UserName" alt="slide" class="img-responsive center-block view-user" style="width: 30%;"><br />
                        <h3 class="text-center view-user" id="@Model.carousels[0].UserName">@Model.carousels[0].UserName.ToUpper()</h3>
                        <h5 class="text-center view-user" id="@Model.carousels[0].UserName">@Model.carousels[0].Description.Substring(0, 30).ToUpper()...</h5>
                    </div>
                </div>

            </div>

            <div class="item">
                <div style="cursor: pointer;">
                    <div class="center-block">
                        <img src="../@Model.carousels[1].Image" id="@Model.carousels[1].UserName" alt="slide" class="img-responsive center-block view-user" style="width: 30%;"><br />
                        <h3 class="text-center view-user" id="@Model.carousels[1].UserName">@Model.carousels[1].UserName.ToUpper()</h3>
                        <h5 class="text-center view-user" id="@Model.carousels[1].UserName">@Model.carousels[1].Description.Substring(0, 30).ToUpper()...</h5>
                    </div>
                </div>
            </div>

            <div class="item">
                <div style="cursor: pointer;">
                    <div class="center-block">
                        <img src="../@Model.carousels[2].Image" id="@Model.carousels[2].UserName" alt="slide" class="img-responsive center-block view-user" style="width: 30%;"><br />
                        <h3 class="text-center view-user" id="@Model.carousels[2].UserName">@Model.carousels[2].UserName.ToUpper()</h3>
                        <h5 class="text-center view-user" id="@Model.carousels[2].UserName">@Model.carousels[2].Description.Substring(0, 30).ToUpper()...</h5>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/förstasidan.png" alt="slide">
            </div>
            <div class="item">
                <img src="~/Images/slide2pic.png" alt="slide2">
            </div>
            <div class="item">
                <img src="~/Images/slide3pic.png" alt="slide3">
            </div>
        </div>

    }

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@section Scripts {
    <script>
        $(".view-user").on("click", function (e) {
            var id = e.target.getAttribute("id");
            window.location.href = '../Search/ViewProfile?username=' + id;
        });

    </script>
}


