@model DatingSida.Models.UserProfileIndexViewModel

@{
    ViewBag.Title = "Min profil";
}

<h2>Min Profil</h2>
<div class="container">
    <div class="col-md-5">
        <img src="@Model.Image" style="width: 20%; max-height: 400px; min-height: 200px; max-width: 400px; min-width: 200px; " />
        @using (Html.BeginForm("SetImage", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label class="btn btn-primary"> Byt Bild
                <input type="file" name="img" id="img" class="btn btn-group-sm" hidden style="display: none !important;">
            </label>
                <input type="submit" value="Spara" class="btn btn-primary" />

         }

        </div>
    <div class="col-md-7">
        <h2>@Model.Firstname @Model.Lastname</h2>
        <h4>@Model.Username</h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-10 text-center">
        <h4>Beskrivning</h4>
        <p>@Model.Description</p>
    </div>
</div>
