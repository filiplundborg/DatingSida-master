@model DatingSida.Models.UserProfileIndexViewModel

@{
    ViewBag.Title = "Min profil";
}

<h2>Min Profil</h2>
<div class="row">
    <div class="col-md-6">
        <img src="@Model.Image" style="width: 20%" />
        @using (Html.BeginForm("SetImage", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            
            <input type="file" name="img" id="img" hidden class="btn btn-primary">
            <input type="submit" value="Spara" class="btn btn-primary" />
        }
    </div>
    <div class="col-md-6">
        <h2>@Model.Firstname @Model.Lastname</h2>
        <h4>@Model.Username</h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-10 text-center">
        <h4>Beskrivning</h4>
        <p>@Model.Description</p>
    </div>
</div>
