@using DatingSida.Models.ViewModel
@model FriendCategoryViewModel

@{
    ViewBag.Title = Model.Category.Name;
}

<h2>@Model.Category.Name.ToUpper()</h2>

<div class="container">
    <ul>
        @if (Model.Friends != null && Model.Friends.Count > 0)
        {
            foreach (var item in Model.Friends)
            {
                <li class="list-group-active col-sm-10 center-block" style="border: 1px solid #000; border-radius: 5px; padding: 1%; margin-top: 1%; margin-bottom: 1%;">
                    <div class="col-sm-10">
                  
                            <img src="../../@item.Image" style="width: 10%;" class="img-rounded" /><b class="col-md-offset-1">
                                @Html.ActionLink(item.UserName.ToUpper(), "ViewProfile", "Search", new { username = item.UserName }, htmlAttributes: new { @class = "btn btn-link", @style = "font-size: 200% !important;" })
                        
                    </div>
                </li>
            }

        }
    </ul>
</div>
