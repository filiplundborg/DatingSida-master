@model DatingSida.Models.UserProfileIndexViewModel
@{
    ViewBag.Title = "Mina vänner";
}

<h2>Hantera vänner</h2>


<div class="container">
    @if (Model.Friends != null && Model.Friends.Count > 0)
    {
        foreach (var item in Model.Friends)
        {
            <div class="list-group-active col-md-10 center-block" style="border: 1px solid #000; border-radius: 5px; padding: 2%; margin-top: 2%; margin-bottom: 2%;">
                <h4 class="list-group-item-heading"> <img src="../@item.Image" style="width: 5%;" /><b class="col-md-offset-1">@Html.ActionLink(item.UserName.ToUpper(), "ViewProfile", "Search", new { username = item.UserName }, htmlAttributes: new { @class = "btn btn-link", @style = "font-size: 200% !important;" })</b></h4>
            </div>
        }

    }
</div>



